<!-- Sidebar -->
<ul class="navbar-nav sidebar sidebar-dark accordion left-text light-blue-hs-bg" id="accordionSidebar">
  <!-- Sidebar - Brand -->
  <%= link_to root_path, class: 'sidebar-brand d-flex align-items-center justify-content-center' do %>
    <div class="sidebar-brand-icon rotate-n-15">
      <i class="fas fa-laugh-wink"></i>
    </div>
    <div class="sidebar-brand-text mx-3">HiSchool</div>
  <% end %>

  <!-- Professores -->
  <li class="nav-item <%= 'active' if controller_name == 'teachers' %>">
    <%= link_to app_institutions_teachers_path, class: 'nav-link pl-4' do %>
      <i class="fas fa-chalkboard-teacher"></i>
      <span>Professores</span>
    <% end %>
  </li>

  <!-- Alunos -->
  <li class="nav-item <%= 'active' if controller_name == 'students' %>">
    <%= link_to app_institutions_branch_students_path(@current_branch), class: 'nav-link pl-4' do %>
      <i class="fas fa-users"></i>
      <span>Alunos</span>
    <% end %>
  </li>

  <!-- Cursos -->
  <li class="nav-item <%= 'active' if controller_name == 'courses' || controller_name == 'group' || controller_name == 'units' %>">
    <%= link_to app_institutions_branch_courses_path(@current_branch), class: 'nav-link pl-4' do %>
      <i class="fas fa-graduation-cap"></i>
      <span>Cursos</span>
    <% end %>
  </li>

  <!-- Grades -->
  <li class="nav-item <%= 'active' if controller_name == 'grades' %>">
    <%= link_to app_institutions_branch_grades_path(@current_branch), class: 'nav-link pl-4' do %>
      <i class="far fa-calendar-alt"></i>
      <span>Grades</span>
    <% end %>
  </li>

  <!-- Configurações -->
  <li class="nav-item <%= 'active' if controller_name == 'branches' %>">
    <%= link_to app_institutions_branch_path(@current_branch), class: 'nav-link pl-4' do %>
      <i class="fas fa-cog"></i>
      <span>Configurações</span>
    <% end %>
  </li>
</ul>
<!-- End of Sidebar -->
