<div class="container-fluid">
  <div class="col-12 mx-auto">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></li>
            <li class="breadcrumb-item"><%= link_to @branch.name, app_institutions_branch_courses_path(@branch) %></li>
            <li class="breadcrumb-item active"><%= @grade.title %></li>
          </ol>
        </nav>
        <button type="button" name="button" class="lean-button purple-blue-hs-text" onclick="enableElement('#grade_title','#grade_begin_date','#grade_end_date','#save_grade_button','#cancel_grade_edition_button');">
          <i class="far fa-edit" data-toggle="tooltip" data-placement="top" title="Clique aqui para editar"></i>
        </button>
      </div>
      <div class="card-body">
        <%= simple_form_for @grade, url: app_institutions_branch_grade_path(@branch), method: :put do |f| %>
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <h3>Informações de identificação</h3>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>Código da grade</label>
                  <%= f.input :title, label: false, readonly: true, required: true, placeholder: "Código identificador do curso", input_html: { class: 'form-control' } %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-3">
                <div class="form-group">
                  <label>Início</label>
                  <%= f.input :begin_date, as: :date_picker, readonly: true, label: false, required: true, input_html: { class: 'form-control datepicker', value: localize(f.object.begin_date) } %>
                </div>
              </div>
              <div class="col-3">
                <div class="form-group">
                  <label>Fim</label>
                  <%= f.input :end_date, as: :date_picker, readonly: true, label: false, required: true, input_html: { class: 'form-control datepicker', value: localize(f.object.end_date) } %>
                </div>
              </div>
              <div class="col-6">
                <% if @course.present? %>
                  <h5>Filtrado por (curso)</h5>
                  <button type="button" id="course_filter_button" class="btn btn-outline-primary" data-toggle="modal" data-target="#course-filter"><%= @course.name %></button>
                <% elsif @unit.present? %>
                  <h5>Filtrado por (disciplina)</h5>
                  <button type="button" id="unit_filter_button" class="btn btn-outline-primary" data-toggle="modal" data-target="#unit-filter"><%= @unit.name %> (<%= @unit.course.name %>)</button>
                <% elsif @teacher.present? %>
                  <h5>Filtrado por (professor)</h5>
                  <button type="button" id="teacher_filter_button" class="btn btn-outline-primary" data-toggle="modal" data-target="#teacher-filter"><%= @teacher.name %></button>
                <% else %>
                  <h5>Filtros</h5>
                  <button type="button" id="course_filter_button" class="btn btn-outline-primary" data-toggle="modal" data-target="#course-filter">Curso</button>
                  <button type="button" id="teacher_filter_button" class="btn btn-outline-primary" data-toggle="modal" data-target="#teacher-filter">Professor</button>
                  <button type="button" id="unit_filter_button" class="btn btn-outline-primary" data-toggle="modal" data-target="#unit-filter">Disciplina</button>
                <% end %>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= f.input :branch_id, as: :hidden %>
                <%= f.submit 'Salvar', id: 'save_grade_button', class: 'd-none btn btn-primary float-right mt-2 mb-2' %>
                <%= link_to "CANCELAR", app_institutions_branch_grade_path(@branch, @grade), id: 'cancel_grade_edition_button', class: 'd-none btn btn-outline-danger float-right m-2' %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-12 mx-auto">
                <div id="calendar"></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'app/grade_unit/new_grade_unit_modal' %>
<%= render partial: 'app/grade_unit/grade_unit_modal' %>
<%= render partial: 'app/grades/filters' %>
