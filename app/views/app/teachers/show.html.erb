<div class="container-fluid">
  <div class="col-12 mx-auto">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to 'Professores', app_institutions_teachers_path %></li>
            <li class="breadcrumb-item active"><%= @teacher.name %></li>
          </ol>
        </nav>
        <button type="button" name="button" class="lean-button purple-blue-hs-text" onclick="enableElement('#teacher_name','#teacher_tax_id','#teacher_cellphone','#teacher_birthdate_1i','#teacher_birthdate_2i','#teacher_birthdate_3i','#teacher_user_attributes_email','#save_teacher_button','#cancel_teacher_edition_button');">
          <i class="far fa-edit" data-toggle="tooltip" data-placement="top" title="Clique aqui para editar"></i>
        </button>
      </div>
      <div class="card-body">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-12">
              <ul class="nav nav-tabs">
                <li class="nav-item">
                  <%= link_to "Dados", app_institutions_teacher_path(@teacher), class: "nav-link active" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Ponto eletrônico", clock_ins_app_institutions_teacher_path(@teacher), class: "nav-link" %>
                </li>
              </ul>
            </div>
          </div>
          <%= simple_form_for @teacher, url: app_institutions_teacher_path, method: :put do |f| %>
            <div class="row mb-2">
              <div class="col-12">
                <h4>Informações de identificação</h4>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                <div class="form-group">
                  <label>Nome completo</label>
                  <%= f.input :name, label: false, input_html: { class: 'form-control', readonly: true } %>
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>CPF</label>
                  <%= f.input :tax_id, label: false, input_html: { class: 'form-control', readonly: true } %>
                </div>
              </div>
            </div>
            <div class="row mb-2 mt-2">
              <div class="col-12">
                <h4>Informações pessoais</h4>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                <label>Número de telefone</label>
                <%= f.input :cellphone, label: false, placeholder: "(XX) XXXXX-XXXX", readonly: true, input_html: { class: 'form-control' } %>
              </div>
              <div class="col-6">
                <label>Data de nascimento</label>
                <%= f.input :birthdate, label: false, placeholder: "DD/MM/AAAA", order: [:day, :month, :year], start_year: Date.today.year, end_year: Date.today.year - 120, readonly: true, input_html: { class: 'form-control' } %>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                <%= f.simple_fields_for :user do |p| %>
                  <%= p.input :email, readonly: true, input_html: { class: 'form-control' } %>
                <% end %>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= f.submit 'SAlVAR', id: 'save_teacher_button', class: 'btn btn-primary float-right mt-2 mb-2 d-none' %>
                <%= link_to 'CANCELAR', app_institutions_teacher_path(@teacher), id: 'cancel_teacher_edition_button', class: 'd-none btn btn-outline-danger float-right m-2' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
