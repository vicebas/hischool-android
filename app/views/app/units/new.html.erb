<div class="container">
  <div class="col-10 mx-auto">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></li>
            <li class="breadcrumb-item"><%= link_to @branch.name, app_institutions_branch_courses_path(@branch) %></li>
            <li class="breadcrumb-item"><%= link_to @course.name, app_institutions_branch_course_path(@branch, @course) %></li>
            <li class="breadcrumb-item active">Nova Disciplina</li>
          </ol>
        </nav>
      </div>
      <div class="card-body">
        <%= simple_form_for @unit, url: app_institutions_branch_course_units_path, method: :post do |f| %>
          <div class="container">
            <div class="row">
              <div class="col-12">
                <h3>Informações de identificação</h3>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>Código da disciplina</label>
                  <%= f.input :code, label: false, required: true, placeholder: "", input_html: { class: 'form-control' } %>
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>Nome da disciplina</label>
                  <%= f.input :name, label: false, required: true, placeholder: "", input_html: { class: 'form-control' } %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                <div class="form-group">
                  <label>Tipo da disciplina</label>
                  <%= f.input :kind, label: false, required: true, collection: { "Teórica": "theoretic", "Prática": "practical" }, input_html: { class: 'form-control' } %>
                </div>
              </div>
              <div class="col-6">
                <%= f.input :branch_id, as: :hidden %>
                <%= f.input :course_id, as: :hidden %>
                <%= f.submit 'Salvar', class: 'btn btn-primary float-right mt-2 mb-2' %>
              </div>
            </div>
            <hr>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
