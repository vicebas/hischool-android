<div class="container-fluid">
  <div class="col-12 mx-auto">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Criar unidade</h6>
      </div>
      <div class="card-body">
        <%= simple_form_for @branch, url: app_institutions_branches_path, method: :post do |f| %>
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <h3>Informações de identificação</h3>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>Código da unidade</label>
                  <%= f.input :code, label: false, required: true, placeholder: "Código identificador da unidade", input_html: { class: 'form-control' } %>
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>Nome da unidade</label>
                  <%= f.input :name, label: false, required: true, placeholder: "Nome da unidade", input_html: { class: 'form-control' } %>
                </div>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-12">
                <h3>Endereço</h3>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>CEP</label>
                  <%= f.input :cep, label: false, required: true, placeholder: "CEP da unidade", input_html: { class: 'form-control' } %>
                </div>
                <div class="form-group">
                  <label>Estado</label>
                  <%= f.input :federation_id, label: false, required: true, input_html: { readonly: true, class: 'form-control' } %>
                </div>
                <div class="form-group">
                  <label>Cidade</label>
                  <%= f.input :city, label: false, required: true, input_html: { readonly: true, class: 'form-control' } %>
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>Bairro</label>
                  <%= f.input :neighborhood, label: false, required: true, input_html: { readonly: true, class: 'form-control' } %>
                </div>
                <div class="form-group">
                  <label>Rua</label>
                  <%= f.input :street, label: false, required: true, input_html: { readonly: true, class: 'form-control' } %>
                </div>
                <div class="form-group">
                  <label>Número</label>
                  <%= f.input :address_number, label: false, required: true, input_html: { class: 'form-control' } %>
                </div>
                <div class="form-group">
                  <label>Complemento</label>
                  <%= f.input :complement, label: false, required: true, placeholder: 'Informações para ajudar na localização', input_html: { class: 'form-control' } %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= f.input :institution_id, as: :hidden %>
                <%= f.submit 'Salvar', class: 'btn btn-primary float-right mt-2 mb-2' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
