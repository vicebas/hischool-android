<div class="container-fluid">
  <div class="col-12 mx-auto">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary"><%= @branch.name %></h6>
        <button type="button" name="button" class="lean-button purple-blue-hs-text" onclick="enableElement('#branch_name','#branch_code',
        '#branch_cep','#branch_address_number','#branch_complement','#save_branch_button','#cancel_branch_edition_button');">
          <i class="far fa-edit" data-toggle="tooltip" data-placement="top" title="Clique aqui para editar"></i>
        </button>
      </div>
      <div class="card-body">
        <%= simple_form_for @branch, url: app_institutions_branch_path, method: :put do |f| %>
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <h3>Informações de identificação</h3>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>Código da unidade</label>
                  <%= f.input :code, label: false, readonly: true, required: true, placeholder: "Código identificador da unidade", input_html: { class: 'form-control' } %>
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>Nome da unidade</label>
                  <%= f.input :name, label: false, readonly: true, required: true, placeholder: "Nome da unidade", input_html: { class: 'form-control' } %>
                </div>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-12">
                <h3>Endereço</h3>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>CEP</label>
                  <%= f.input :cep, label: false, readonly: true, required: true, placeholder: "CEP da unidade", input_html: { class: 'form-control' } %>
                </div>
                <div class="form-group">
                  <label>Estado</label>
                  <%= f.input :federation_id, label: false, required: true, input_html: { readonly: true, class: 'form-control' } %>
                </div>
                <div class="form-group">
                  <label>Cidade</label>
                  <%= f.input :city, label: false, required: true, input_html: { readonly: true, class: 'form-control' } %>
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>Bairro</label>
                  <%= f.input :neighborhood, label: false, required: true, input_html: { readonly: true, class: 'form-control' } %>
                </div>
                <div class="form-group">
                  <label>Rua</label>
                  <%= f.input :street, label: false, required: true, input_html: { readonly: true, class: 'form-control' } %>
                </div>
                <div class="form-group">
                  <label>Número</label>
                  <%= f.input :address_number, readonly: true, label: false, required: true, input_html: { class: 'form-control' } %>
                </div>
                <div class="form-group">
                  <label>Complemento</label>
                  <%= f.input :complement, readonly: true, label: false, required: true, placeholder: 'Informações para ajudar na localização', input_html: { class: 'form-control' } %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= f.input :institution_id, as: :hidden %>
                <%= f.submit 'Salvar', id: 'save_branch_button', class: 'd-none btn btn-primary float-right mt-2 mb-2' %>
                <%= link_to 'CANCELAR', app_institutions_branch_path(@branch), id: 'cancel_branch_edition_button', class: 'd-none btn btn-outline-danger float-right m-2' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
